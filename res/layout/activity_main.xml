<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView  
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:scaleType="center"
        android:id="@+id/imageView"
        android:src="@drawable/background" />
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" 
    android:background="#AA000000"
    >
  
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_black"
        android:src="@drawable/ic_action_new"
        android:onClick="LaunchAddImmoActivity" />
    
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_action_collection"
        android:background="@drawable/btn_black"
        android:onClick="LaunchConsultationActivity" />
    
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_black"
        android:src="@drawable/ic_action_new_place"
        android:onClick="LaunchAddRefLocationActivity" />
     
</LinearLayout>
</FrameLayout>